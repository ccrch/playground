---
import Alphabet from '../components/branding-page-alphabet.astro'
import Logo3D from '../components/branding-page-3d-logo.astro'
import ScrambledText from '../components/branding-page-scrambled-text.astro'
import TypoCircles from '../components/branding-page-typo-circles.astro'

const headline = 'Letrið okkar'
const text = 'Skýrt, nútímalegt og með karakter. Letrið okkar – Aeonik – sameinar fágaðan stíl og góða læsileika. Það virkar á öllum miðlum og speglar nútímalegan, traustan og aðgengilegan persónuleika Vettvangs.'
---

<TypoCircles />
<div class="grid">
  <div class="grid__col grid__col--6">
    <h2 class="split-content-text" set:html={headline} />
  </div>
  <div class="grid__col grid__col--6">
    <p class="split-content-text" set:html={text} />
  </div>
</div>
<div class="grid">
  <div class="grid__col grid__col--6">
    <div class="box box--white box--small section__content-box-alphabet">
      <div class="box__container">
        <Alphabet />
      </div>
    </div>
  </div>
  <div class="grid__col grid__col--6">
    <div class="box box--navy-light box--small section__content-box-scrambled-text">
      <div class="box__container">
        <ScrambledText />
      </div>
    </div>
  </div>
  <div class="grid__col grid__col--6">
    <div class="box box--red box--small section__content-box-3d-letters">
      <div class="box__container">
        <div class="section__content-box-3d-letters-container">
          <Logo3D text="Aa" />
        </div>
      </div>
    </div>
  </div>
  <div class="grid__col grid__col--6">
    <div class="box box--white box--small section__content-box-font-weights">
      <div class="box__container">
        <button>Light</button>
        <button>Regular</button>
        <button>Medium</button>
        <button>SemiBold</button>
        <button>Bold</button>
      </div>
    </div>
  </div>
</div>
